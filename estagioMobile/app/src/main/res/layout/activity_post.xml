<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.post.PostActivity"
             android:id="@+id/rootPostLayout">

    <com.baoyz.widget.PullRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">


            <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                            android:id="@+id/cardHeaderLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginEnd="8dp"
                            android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/personProfileImage"
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:layout_margin ="8dp"
                                android:src="@drawable/ic_account_circle_black_24dp" />

                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                            <TextView
                                    android:id="@+id/personName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Nome do Autor"
                                    android:textColor="@color/textDarkPrimary"
                                    android:textStyle="bold"
                                    android:maxLines="1"
                                    android:textSize="18sp"
                                    android:ellipsize="end"/>

                            <TextView
                                    android:id="@+id/personGoal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    tools:text="Objetivo"
                                    android:textColor="@color/textDarkSecondary"
                                    android:maxLines="1"
                                    android:textSize="14sp"/>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/postBodyLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp">

                                <FrameLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                    <ImageView
                                            android:id="@+id/postPhoto"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_restaurant_black_24dp"
                                            android:scaleType="centerCrop"/>

                                    <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/trending_gradiente_shape"/>



                                </FrameLayout>

                                <TextView
                                        android:id="@+id/mealTypeTextView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:textColor="@color/white"
                                        android:layout_alignParentBottom="true"
                                        android:layout_marginStart="16dp"
                                        android:layout_marginBottom="12dp"/>

                                <TextView
                                        android:id="@+id/postTimestamp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toEndOf="@id/mealTypeTextView"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginBottom="12dp"
                                        android:textSize="16sp"
                                        android:textColor="@color/white"
                                        android:layout_alignParentBottom="true"/>


                                <ImageView
                                        android:id="@+id/likeBtn"
                                        android:layout_width="34dp"
                                        android:layout_height="34dp"
                                        android:layout_alignParentEnd="true"
                                        android:layout_margin="12dp"
                                        android:src="@drawable/ic_favorite_border_white_24dp"
                                        android:layout_alignParentBottom="true"
                                        android:elevation="2dp"/>

                            </RelativeLayout>

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFoods"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                    android:id="@+id/labelTotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="TOTAL"
                    android:textColor="@color/textDarkPrimary"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"

            />

            <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/textDarkSecondary"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>



            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="35dp"
                >

                    <TextView
                            android:id="@+id/labelCal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Cal"
                            android:textColor="@color/textDarkPrimary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"

                    />

                    <TextView
                            android:id="@+id/foodTotalEnergyText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="xxx kcal"
                            android:textColor="@color/textDarkSecondary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textSize="16sp"

                    />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="35dp"

                >

                    <TextView
                            android:id="@+id/labelCarb"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Carb"
                            android:textColor="@color/textDarkPrimary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                    />

                    <TextView
                            android:id="@+id/foodTotalCarbohydrateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="xxx g"
                            android:textColor="@color/textDarkSecondary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textSize="16sp"

                    />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="35dp"
                >

                    <TextView
                            android:id="@+id/labelProt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Prot"
                            android:textColor="@color/textDarkPrimary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"


                    />

                    <TextView
                            android:id="@+id/foodTotalProteinText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="xxx g"
                            android:textColor="@color/textDarkSecondary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textSize="16sp"
                    />


                </LinearLayout>

                <LinearLayout
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="35dp"
                >

                    <TextView
                            android:id="@+id/labelFat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Gord"
                            android:textColor="@color/textDarkPrimary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textSize="16sp"
                            android:layout_gravity="center_horizontal"
                    />

                    <TextView
                            android:id="@+id/foodTotalFatText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="xxx g"
                            android:textColor="@color/textDarkSecondary"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:textSize="16sp"

                    />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </com.baoyz.widget.PullRefreshLayout>

</FrameLayout>
